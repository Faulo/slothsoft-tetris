		<link-script ref="/js/Tetris.Block"/>
		<link-script ref="/js/Tetris.Board"/>
		<link-script ref="/js/Tetris.Controls"/>
		<link-script ref="/js/Tetris.Game"/>
		<link-script ref="/js/Tetris.Pos"/>
