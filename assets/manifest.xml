<?xml version="1.0"?>
<assets xmlns="http://schema.slothsoft.net/farah/module">
    <resource-directory name="css" type="text/css"/>
    <resource-directory name="js" type="application/javascript"/>
    <resource-directory name="xsl" type="application/xslt+xml"/>
    
    <directory name="static">
      <resource name="game" type="application/xml"/>
    </directory>
    
    <fragment name="game">
      <use-template ref="/xsl/home" name="home"/>
      <link-stylesheet ref="/css/game" name="game"/>
      <link-script ref="/js/core" name="core"/>
      <link-script ref="/js/Tetris" name="Tetris"/>
      <link-script ref="/js/Tetris.Block" name="Tetris.Block"/>
      <link-script ref="/js/Tetris.Board" name="Tetris.Board"/>
      <link-script ref="/js/Tetris.Controls" name="Tetris.Controls"/>
      <link-script ref="/js/Tetris.Game" name="Tetris.Game"/>
      <link-script ref="/js/Tetris.Pos" name="Tetris.Pos"/>
      <link-script ref="/js/Tetris.Shape" name="Tetris.Shape"/>
      <link-script ref="/js/Tetris.Storage" name="Tetris.Storage"/>
    </fragment>
  </assets>
